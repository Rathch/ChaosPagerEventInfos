# API Configuration
API_URL=https://api.events.ccc.de/congress/2025/schedule.json


# Logging
LOG_FILE=logs/event-pager.log

# Duplicate Tracking
# Temporary file for hash list of already sent messages
SENT_HASHES_FILE=logs/sent-hashes.txt

# Pager Configuration
# Radio Identification Code (RIC)
# Example: 2022658

# Test Mode
# If enabled (true), sends notification for first found talk in large room
# regardless of time (useful for testing)
# Default: false
# Important: Set to false for production use!
TEST_MODE=false

# Notification Timing
# Minutes before talk start to send notification (default: 15 minutes)
# Example: Set to 30 to send notifications 30 minutes before talks
NOTIFICATION_MINUTES=15

# Time Simulation (for local testing)
# If set, uses this time instead of the current system time
# Format: ISO-8601 (e.g., "2025-12-27T10:15:00+01:00")
# Useful for testing time-based notification logic locally
# Example: Set to 15 minutes before a talk start time to test notification sending
# Leave empty or unset to use real system time
# SIMULATE_CURRENT_TIME=2025-12-27T10:15:00+01:00

# Room to DAPNET Subscriber Mapping (Primary - for DAPNET Calls)
# Direct mapping from room names to DAPNET Subscriber IDs
# These are used directly for sending DAPNET calls (no RIC needed)
ROOM_SUBSCRIBER_ZERO=1140
ROOM_SUBSCRIBER_ONE=1141
ROOM_SUBSCRIBER_GROUND=1142
ROOM_SUBSCRIBER_FUSE=1143
ROOM_SUBSCRIBER_ALL_ROOMS=1150

# Room-RIC Mapping (Secondary - for Subscriber Creation)
# Radio Identification Codes (RIC) for each room
# Used only for creating subscribers (pagers.ric field in DAPNET API)
# If not configured, defaults are used (same as Subscriber IDs above)
# Default values:
#   Zero → 1140
#   One → 1141
#   Ground → 1142
#   Fuse → 1143
#   All Rooms → 1150
ROOM_RIC_ZERO=1140
ROOM_RIC_ONE=1141
ROOM_RIC_GROUND=1142
ROOM_RIC_FUSE=1143
ROOM_RIC_ALL_ROOMS=1150

# Message Queue Configuration
# Delay between successful messages (in seconds)
QUEUE_DELAY_SECONDS=5
# Maximum number of retry attempts for failed messages
QUEUE_MAX_RETRIES=3
# Delay between retry attempts (in seconds)
QUEUE_RETRY_DELAY_SECONDS=5

# DAPNET API Configuration
# DAPNET v2 API URL (default: http://localhost:8080)
DAPNET_API_URL=http://localhost:8080
# DAPNET API HTTP Basic Authentication Username
DAPNET_API_USERNAME=username
# DAPNET API HTTP Basic Authentication Password
DAPNET_API_PASSWORD=password
# DAPNET Call Priority (0-7, default: 3, 0-1 reserved for admin/support)
DAPNET_PRIORITY=3
# DAPNET Call Expiration in seconds (60-86400, default: 86400 = 24 hours)
DAPNET_EXPIRATION=86400
# DAPNET Call Local flag (default: false)
DAPNET_LOCAL=false
# DAPNET Call Use Home Info flag (default: false)
DAPNET_USE_HOME_INFO=false
# DAPNET Transmitter Groups (comma-separated list, or "all" for all available groups)
DAPNET_TRANSMITTER_GROUPS=all