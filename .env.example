# API Configuration
API_URL=https://api.events.ccc.de/congress/2025/schedule.json

# HTTP Configuration
# HTTP_MODE: simulate (logs requests) or real (sends actual HTTP POST requests)
HTTP_MODE=simulate
# HTTP endpoint URL for POST requests
HTTP_ENDPOINT=http://192.168.188.21:5000/send

# Logging
LOG_FILE=logs/event-pager.log

# Duplicate Tracking
# Temporary file for hash list of already sent messages
SENT_HASHES_FILE=logs/sent-hashes.txt

# Pager Configuration
# Radio Identification Code (RIC)
# Example: 2022658
RIC=1142

# Test Mode
# If enabled (true), sends notification for first found talk in large room
# regardless of time (useful for testing)
# Default: false
# Important: Set to false for production use!
TEST_MODE=false
