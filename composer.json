{
    "name": "cru/chaos-pager-event-infos",
    "description": "Event Pager Notifications - Automatically sends notifications for talks in large rooms",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "ChaosPagerEventInfos\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChaosPagerEventInfos\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": [
            "@lint:cs",
            "@lint:stan"
        ],
        "lint:cs": "php-cs-fixer fix --dry-run --diff",
        "lint:cs:fix": "php-cs-fixer fix",
        "lint:stan": "phpstan analyse"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
